MACRO(ADD_ELVIS_PLUGIN name type)
	ADD_LIBRARY(${name} SHARED ${type} ${ARGN})	
	#SET_ELVIS_TARGET_PROPERTIES(${name})
	#SET_TARGET_PROPERTIES(${name} PROPERTIES SUFFIX .ev_plugin)
	INSTALL(TARGETS ${name} RUNTIME DESTINATION ${ELVIS_PLUGIN_DIR}
                            LIBRARY DESTINATION ${ELVIS_PLUGIN_DIR} NAMELINK_SKIP)
ENDMACRO(ADD_ELVIS_PLUGIN name type)
